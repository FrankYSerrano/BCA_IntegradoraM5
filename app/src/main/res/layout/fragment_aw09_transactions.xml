<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.fragments.aw05_homepage">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/tx_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_picture"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
        </ImageView>
        <ImageView
            android:id="@+id/tx_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/request_icon">
        </ImageView>

        <LinearLayout
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tx_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOMBRE"></TextView>

            <TextView
                android:id="@+id/tx_timestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TIME STAMP"></TextView>
        </LinearLayout>
        <TextView
            android:id="@+id/tx_symbol"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="+/-"
            android:padding="5dp"
            android:gravity="center_vertical">
        </TextView>
        <TextView
            android:id="@+id/tx_currency"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="$"
            android:padding="5dp"
            android:gravity="center_vertical">
        </TextView>
        <TextView
            android:id="@+id/tx_ammount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="XXXXX.00"
            android:gravity="center_vertical">
        </TextView>

    </LinearLayout>


</FrameLayout>